# Remove the line below if you want to inherit .editorconfig settings from higher directories
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
tab_width = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = crlf
max_line_length = 120

[*.md]
max_line_length = off
trim_trailing_whitespace = false
