{
  "name": "samling",
  "version": "1.1.0",
  "description": "Serverless SAML testing",
  "author": "The Fabio",
  "homepage": "https://github.com/TheFabio/samling",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheFabio/samling.git"
  },
  "bugs": {
    "url": "https://github.com/fujifish/samling/issues"
  },
  "keywords": [
    "SAML",
    "saml",
    "idp",
    "testing"
  ],
  "dependencies": {
    "bootstrap": "3.4.1",
    "clipboard-js": "^0.2.0",
    "jquery": "2.2.4"
  },
  "devDependencies": {
    "brfs": "1.4.3",
    "browserify": "13.0.1",
    "http-server": "^14.1.1",
    "node-forge": "0.6.40",
    "xml-crypto": "1.4.0",
    "xmldom": "^0.6.0"
  },
  "scripts": {
    "create-folders": "node src/build/build-dist-folders.js",
    "build-forge-bundle": "cd .tmp/node-forge && npm install && npm run bundle && cp js/forge.bundle.js ../../dist",
    "build-bundle": "browserify -g brfs src/saml/samling.js > dist/bundle.js",
    "setup-dist": "node src/build/setup-dist-environment",
    "set-local": "npm run setup-dist --hosting-url='http://localhost:8888'",
    "serve": "npm run create-folders && npm run set-local && npm run build-forge-bundle && npm run build-bundle && npm run set-local && http-server -p 8888 ./dist -o /"
  },
  "license": "MIT"
}
